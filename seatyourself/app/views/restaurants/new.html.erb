<%= form_for @restaurant do |f| %>
  <p>
    <%= f.label "Name" %><br>
    <%= f.text_field "name" %>
  </p>
   <p>
    <%= f.label "Address" %><br>
    <%= f.text_field "address" %>
  </p>
    <%= f.label "Location" %><br>
    <%= f.text_field "location" %>
  </p>
  <p>
    <%= f.label "Total Capacity" %>
    <%= f.number_field 'capacity', :max => 100 %>
  </p>
  <p>
    <%= f.submit "Save" %> 
  </p>
<% end %>
<%= link_to 'Back', restaurants_path %>