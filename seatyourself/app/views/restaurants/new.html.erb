<% if current_user %> 
  <%= form_for @restaurant do |f| %>
    <p>
      <%= f.label "Name" %><br>
      <%= f.text_field "name" %>
    </p>
     <p>
      <%= f.label "Address" %><br>
      <%= f.text_field "address" %>
    </p>
      <%= f.label "Location" %><br>
      <%= f.text_field "location" %>
    </p>
    <p>
      <%= f.label "Total Capacity" %><br>
      <%= f.number_field 'capacity', :max => 100 %>
    </p>
    <p>
      <%= f.submit "Save" %> 
    </p>
  <% end %>
<% else %>
  <p>Please <%= link_to "Log in", login_path %> to make a Restaurant.</p>
<% end %>
<%= link_to 'Back', restaurants_path %>